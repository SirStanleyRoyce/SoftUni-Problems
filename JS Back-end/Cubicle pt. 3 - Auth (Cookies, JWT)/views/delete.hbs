{{#with cube}}
<h1>Delete Cube</h1>
<div class="form">
    <form action='/cubes/delete/{{_id}}' method="POST">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="{{name}}" disabled="true"/>
        <label for="name">Description</label>
        <textarea id="name" name="description" disabled="true"/>{{description}}</textarea>
        <label for="image">ImageUrl</label>
        <input type="text" id="image" name="imageURL" value="{{imageURL}}" disabled="true"/>
        <label for="difficulty">Difficulty</label>
        <select id="difficulty" name="difficulty" disabled="true"/>
        <option value="1" {{#if selected1}}selected{{/if}}>1 - Very Easy</option>
        <option value="2" {{#if selected2}}selected{{/if}}>2 - Easy</option>
        <option value="3" {{#if selected3}}selected{{/if}}>3 - Medium (Standard 3x3)</option>
        <option value="4" {{#if selected4}}selected{{/if}}>4 - Intermediate</option>
        <option value="5" {{#if selected5}}selected{{/if}}>5 - Expert</option>
        <option value="6" {{#if selected6}}selected{{/if}}>6 - Hardcore</option>
        </select>
        <input type="submit" value="Delete">
    </form>
</div>
{{/with}}