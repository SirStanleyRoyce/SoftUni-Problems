<h1>{{cube.name}}</h1>
<img class="cube"
     src="{{cube.imageURL}}">
<div class="details">
    <p><span>Description:</span>{{cube.description}}</p>
    <p><span>Difficulty level:</span> {{cube.difficulty}}</p>
    <a class="btn" href="/cubes">Back</a>
    {{#if user}}
        <a class="btn" href="/cubes/attach/{{cube._id}}">Attach</a>
    {{/if}}
    {{#if cube.isOwner}}
        <a class="btn" href="/cubes/edit/{{cube._id}}">Edit</a>
        <a class="btn" href="/cubes/delete/{{cube._id}}">Delete</a>
    {{/if}}

    <h2>Accessories</h2>
    <div class="accessories">

        {{#each accessories}}
            {{> accessory}}
        {{else}}
            <h3 class="italic">This cube has no accessories yet...</h3>
        {{/each}}

    </div>
</div>
